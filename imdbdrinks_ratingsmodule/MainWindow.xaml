<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="imdbdrinks_ratingsmodule.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:imdbdrinks_ratingsmodule.Domain"
    mc:Ignorable="d"
    Title="imdbdrinksâ€‘ratingsmodule">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock Text="Ratings and Reviews for Product 100" FontSize="24" FontWeight="Bold" FontFamily="{StaticResource FontFamily}"
            VerticalAlignment="Center" Margin="20,0,0,0" Grid.Row="0"/>
        
        <!-- Ratings Section -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Ratings" FontSize="20" FontFamily="{StaticResource FontFamily}" FontWeight="SemiBold"
                Margin="20,20,0,10"/>
            <ListView ItemsSource="{x:Bind ViewModel.Ratings, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedRating, Mode=TwoWay}">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="domain:Rating">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rating:" FontFamily="{StaticResource FontFamily}" Margin="0,0,5,0"/>
                            <TextBlock Text="{x:Bind RatingValue}" FontFamily="{StaticResource FontFamily}" FontWeight="SemiBold"/>
                            <TextBlock Text=" by User " FontFamily="{StaticResource FontFamily}"/>
                            <TextBlock Text="{x:Bind UserId}" FontFamily="{StaticResource FontFamily}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        
        <!--Average Rating + User Rating-->
        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock Text="Average Rating" FontFamily="{StaticResource FontFamily}" FontSize="16" FontWeight="Bold"
                Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" >
                <Image Source="/Assets/image 7.png" HorizontalAlignment="Left" Margin="20,0,10,0"/>
                <TextBlock FontFamily="{StaticResource FontFamily}" FontSize="20px" HorizontalAlignment="Right" 
                    VerticalAlignment="Center" Text="{x:Bind ViewModel.AverageRating, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>
       
        <!-- Reviews Section -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Reviews" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" 
                FontFamily="{StaticResource FontFamily}" FontSize="20" FontWeight="SemiBold"
                Margin="20,0,0,0"/>

            <Button Grid.Row="0" Grid.Column="1" Content="add review" VerticalAlignment="Center" HorizontalAlignment="Right" 
                Height="30" Width="150" Click="AddReview_Click" Margin="0,0,20,0" Padding="0,0,0,0" BorderThickness="0" 
                Foreground="#FFFFEE" Background="#313131" FontFamily="{StaticResource FontFamily}" FontWeight="SemiBold" />

            <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{x:Bind ReviewVM.Reviews, Mode=OneWay}"
                SelectedItem="{x:Bind ReviewVM.SelectedReview, Mode=TwoWay}" Background="#cacaca">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="domain:Review">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Content}" TextWrapping="Wrap" FontFamily="{StaticResource FontFamily}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind CreationDate}" FontSize="12" Foreground="#3d3d3d" FontFamily="{StaticResource FontFamily}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,30,0,40">
            <!--Button for Rating-->
            <TextBlock Text="Your Rating" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="Assets/bottle.png" Width="30" Height="60" Margin="0,0,5,0"/>
                <Button Content="Rate" Click ="AddRating_Click" FontWeight="Bold"  Padding="10,5"/>
            </StackPanel>
            
            <!--Button for average Rating-->
            <TextBlock Text="IMDb Rating" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="30,10,0,0">
                <Image Source="Assets/FullBottle.png" Width="30" Height="60" Margin="0,10,0,0"/>
                <TextBlock Text="8.4/10" FontWeight ="Bold" FontSize="24" />
            </StackPanel>

        </StackPanel>


    </Grid>
</Window>
